<resources>
    <!-- Base application theme. -->
    <style name="Theme.Stockvest" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Theme.ActionBar</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    </style>

    <!-- ActionBar Theme -->
    <style name="Theme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- SplashScreen Theme -->
    <style name="Theme.Stockvest.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_splash_logo</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Stockvest</item>
    </style>

    <!-- EditText Style -->
    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/corner_edittext</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <!-- TextView Normal Black -->
    <style name="TextView.Normal.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TextView Normal SemiBold Black -->
    <style name="TextView.Normal.SemiBold.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TextView Normal SemiBold Red -->
    <style name="TextView.Normal.SemiBold.Red" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/textRed</item>
    </style>

    <!-- TextView Normal Bold Black -->
    <style name="TextView.Normal.Bold.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Button Buy -->
    <style name="Button.Buy" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/baseBlack</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/colorYellow</item>
    </style>

    <!-- Button Sell -->
    <style name="Button.Sell" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/colorRed</item>
    </style>

    <!-- TextView Title -->
    <style name="TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textTitle</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TextView Medium Title -->
    <style name="TextView.Medium.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TextView Medium Activatable -->
    <style name="TextView.Medium.Activatable" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/text_color_selector</item>
    </style>

    <!-- TextView SubTitle Activatable -->
    <style name="TextView.SubTitle.Activatable" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textSubTitle</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/text_color_selector</item>
    </style>

    <!-- TextView SubTitle SemiBold Black -->
    <style name="TextView.SubTitle.SemiBold.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textSubTitle</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/baseBlack</item>
    </style>

    <!-- TextView SubTitle Black -->
    <style name="TextView.SubTitle.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textSubTitle</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/baseBlack</item>
    </style>

    <!-- TextView SubTitle Black Table -->
    <style name="TextView.SubTitle.Black.Table" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textSubTitle</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/baseBlack</item>
        <item name="android:background">@drawable/background_text_table</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <!-- TextView SubTitle Black TableCell -->
    <style name="TextView.SubTitle.Black.TableCell" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textSubTitle</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/baseBlack</item>
        <item name="android:background">@drawable/background_text_table</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <!-- TextView SubTitle Gray -->
    <style name="TextView.SubTitle.Gray" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textSubTitle</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/textLightGray</item>
    </style>

    <!-- TextView Large -->
    <style name="TextView.Large" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Chip -->
    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">@dimen/textSubTitle</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="rippleColor">@color/baseBlack</item>
        <item name="chipBackgroundColor">@color/background_color_chip_filter_list</item>
        <item name="android:textColor">@color/text_color_chip_filter_list</item>
    </style>

    <!-- Chip Tag -->
    <style name="ChipTag" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="rippleColor">@color/baseBlack</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/textGray</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/baseBlack</item>
    </style>

    <!-- BottomSheet Theme -->
    <style name="BottomSheetTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomAppBarStyle">@style/BottomSheetStyle</item>
    </style>

    <!-- BottomSheet Style -->
    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/card_top_background</item>
    </style>

</resources>